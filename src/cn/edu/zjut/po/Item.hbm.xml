<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.edu.zjut.po.Item" table="item" schema="hibernatedb">
        <id name="itemID">
            <column name="ISBN" sql-type="varchar(20)"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar(30)"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(200)" length="200" />
        </property>
        <property name="cost">
            <column name="cost" sql-type="float" precision="-1" />
        </property>
        <property name="image">
            <column name="image" sql-type="blob" />
        </property>
    </class>
</hibernate-mapping>